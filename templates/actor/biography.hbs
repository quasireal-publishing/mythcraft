<section class="tab scrollable {{tab.cssClass}} standard-form" data-group="primary" data-tab="biography">
  {{#if editable}}
  {{formInput systemFields.biography.fields.value enriched=enrichedBiography value=system.biography.value toggled="true"}}
  {{#if user.isGM}}
  <hr>
  {{formGroup systemFields.biography.fields.gm enriched=enrichedGMNotes value=system.biography.gm toggled="true"}}
  {{/if}}
  {{else}}
  {{{enrichedBiography}}}
  <hr>
  {{{enrichedGMNotes}}}
  {{/if}}
</section>
