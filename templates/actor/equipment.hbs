{{! Equipment Tab }}
<section class="tab scrollable {{tab.cssClass}}" data-group="primary" data-tab="equipment">
  <div class="item-header flexrow">
    <div class="item-name">{{localize "DOCUMENT.FIELDS.name.label"}}</div>
    <div class="item-quantity">{{localize "MYTHCRAFT.Item.equipment.FIELDS.quantity.label"}}</div>
    <div class="item-controls">
      {{#if @root.editable}}
      <a class="item-create" data-action="createDoc" data-document-class="Item" data-type="talent">+ {{localize "DOCUMENT.Create" type=(localize "TYPES.Item.armor")}}</a>
      {{/if}}
    </div>
  </div>
  <ul class="item-list">
    {{#each armor}}
    <li class="item flexrow draggable" data-item-id="{{id}}" data-document-class="Item">
      <img src="{{img}}" alt="{{name}}">
      <div class="item-name">{{name}}</div>
      <div class="item-quantity">{{system.quantity}}</div>
      <div class="item-controls flexrow">
        <a class="item-control" data-action="viewDoc" title="{{localize 'DOCUMENT.Update' type=(localize 'TYPES.Item.talent')}}">
          <i class="fas fa-edit"></i>
        </a>
        {{#if @root.editable}}
        <a class="item-control" data-action="deleteDoc" title="{{localize 'DOCUMENT.Delete' type=(localize 'TYPES.Item.talent')}}">
          <i class="fas fa-trash"></i>
        </a>
        {{/if}}
      </div>
    </li>
    {{/each}}
  </ul>
