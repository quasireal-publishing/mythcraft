{{! Talents Tab }}
<section class="tab scrollable {{tab.cssClass}}" data-group="primary" data-tab="talents">
  <div class="item-header flexrow">
    <div class="item-name">Name</div>
    <div class="item-controls">
      {{#if @root.editable}}
      <a class="item-create" data-action="createDoc" data-document-class="Item" data-type="talent">+ {{localize "DOCUMENT.Create" type=(localize "TYPES.Item.talent")}}</a>
      {{/if}}
    </div>
  </div>
  <ul class="item-list">
    {{#each talents as |talent|}}
    <li class="item flexrow" data-item-id="{{talent.id}}" data-document-class="Item">
      <img src="{{talent.img}}" alt="{{talent.name}}">
      <div class="item-name">{{talent.name}}</div>
      <div class="item-controls flexrow">
        <a class="item-control" data-action="viewDoc" title="{{localize 'DOCUMENT.Update' type=(localize 'TYPES.Item.talent')}}">
          <i class="fas fa-edit"></i>
        </a>
        {{#if @root.editable}}
        <a class="item-control" data-action="deleteDoc" title="{{localize 'DOCUMENT.Delete' type=(localize 'TYPES.Item.talent')}}">
          <i class="fas fa-trash"></i>
        </a>
        {{/if}}
      </div>
    </li>
    {{/each}}
  </ul>
</section>
