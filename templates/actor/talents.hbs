{{! Talents Tab }}
<section class="tab scrollable {{tab.cssClass}}" data-group="primary" data-tab="talents">
  <div class="item-header flexrow">
    <div class="item-name">{{localize "DOCUMENT.FIELDS.name.label"}}</div>
    <div class="item-controls">
      {{#if @root.editable}}
      <a class="item-create" data-action="createDoc" data-document-class="Item" data-type="talent">+ {{localize "DOCUMENT.Create" type=(localize "TYPES.Item.talent")}}</a>
      {{/if}}
    </div>
  </div>
  <ul class="item-list">
    {{#each talents}}
    <li class="item draggable" data-item-id="{{item.id}}" data-document-class="Item">
      <div class="item-row flexrow">
        <img src="{{item.img}}" alt="{{item.name}}">
        <div class="item-name">{{item.name}}</div>
        <div class="item-controls flexrow">
          <a data-action="toggleItemEmbed">
            <i class="fa-solid fa-angle-{{ifThen expanded "down" "right"}}"></i>
          </a>
        </div>
      </div>
      <div class="item-embed">
        {{#if expanded}}EmbeddedText{{/if}}
      </div>
    </li>
    {{/each}}
  </ul>
</section>
